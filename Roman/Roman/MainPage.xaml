<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roman.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">

            <Label Text="Roman Converter" FontSize="Title" HorizontalOptions="Center" />
            <Border Stroke = "black" StrokeThickness="1">
                <Entry x:Name="txtInput" />
            </Border>


            <Label x:Name="lblDisplay" HorizontalOptions="Center" Text="0" Padding="30,30" FontSize="40"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnConvert" Text="Convert" HorizontalOptions="FillAndExpand" FontSize="Large" Clicked="btnConvert_Clicked"/>
                <Button x:Name="btnClear" Text="Clear" HorizontalOptions="FillAndExpand" FontSize="Large" Clicked="btnClear_Clicked" />
            </StackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

